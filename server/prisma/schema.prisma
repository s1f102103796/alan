datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id
  githubId    String
  email       String
  displayName String?
  photoURL    String?
  createdAt   DateTime
  apps        App[]
}

model GitHubAction {
  id         String   @id
  type       String
  title      String
  status     String
  conclusion String?
  branch     String
  commitId   String
  updatedAt  DateTime
  Bubble     Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId   String   @unique
}

model RailwayDeployment {
  id        String   @id
  title     String
  status    String
  branch    String
  commitId  String
  updatedAt DateTime
  Bubble    Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId  String   @unique
}

model Task {
  id       String  @id
  index    Int
  title    String
  content  String
  done     Boolean
  Bubble   Bubble  @relation(fields: [bubbleId], references: [id])
  bubbleId String
  App      App?    @relation(fields: [appId], references: [id])
  appId    String?
}

model Bubble {
  id                String             @id
  type              String
  content           String
  createdAt         DateTime
  App               App                @relation(fields: [appId], references: [id])
  appId             String
  events            AppEvent[]
  taskList          Task[]
  GitHubAction      GitHubAction?
  RailwayDeployment RailwayDeployment?
}

model App {
  id             String     @id
  index          Int
  name           String
  similarName    String
  status         String
  ogpImageName   String?
  ogpImagePrompt String?
  environmentId  String?
  projectId      String?
  serviceId      String?
  createdAt      DateTime
  bubbles        Bubble[]
  events         AppEvent[]
  taskList       Task[]
  User           User       @relation(fields: [userId], references: [id])
  userId         String
}

model AppEvent {
  id           String   @id
  type         String
  subscriberId String
  status       String
  createdAt    DateTime
  updatedAt    DateTime
  failedCount  Int
  App          App      @relation(fields: [appId], references: [id])
  appId        String
  Bubble       Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId     String
}
